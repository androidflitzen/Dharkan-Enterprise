<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:contentInsetStart="@dimen/_1sdp"
            android:contentInsetLeft="@dimen/_1sdp"
            android:contentInsetEnd="@dimen/_1sdp"
            android:contentInsetRight="@dimen/_1sdp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ToolbarTheme"
            app:contentInsetEnd="@dimen/_1sdp"
            app:contentInsetLeft="@dimen/_1sdp"
            app:contentInsetRight="@dimen/_1sdp"
            app:contentInsetStart="@dimen/_1sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/ivBackEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_left_arrow"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_toRightOf="@+id/ivBackEdit"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/colorwhite"
                    android:textSize="@dimen/_12sdp" />



            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/progress_bar"
                    style="@style/SpinKitView.Wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_120sdp"
                    android:layout_marginTop="@dimen/_180sdp"
                    android:layout_marginRight="@dimen/_120sdp"
                    android:visibility="gone"
                    app:SpinKit_Color="@color/colorAccent" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSalePerson"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Sales Person"
                            android:textColor="@color/text1"
                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:id="@+id/rvSalePersons"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/border_card_unchange"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSalePersonName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:gravity="left|center_vertical"
                                android:hint="-- Sales Person Name --"
                                android:paddingLeft="@dimen/_15sdp"
                                android:singleLine="true"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/text1"
                                android:textSize="@dimen/_10sdp" />

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvCompnyname1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Company Name"
                            android:textColor="@color/text1"
                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:id="@+id/rvCompnyspn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/border_card_unchange"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCompanySpn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:gravity="left|center_vertical"
                                android:hint="-- Select Company Name --"
                                android:paddingLeft="@dimen/_15sdp"
                                android:singleLine="true"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/text1"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Enquiry For(Product)*"
                            android:textColor="@color/text1"

                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:id="@+id/rvProductspn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/border_card"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEnquiryProduct"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:gravity="left|center_vertical"
                                android:hint="-- Select Product --"
                                android:paddingLeft="@dimen/_15sdp"
                                android:singleLine="true"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/text1"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvSource1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Enquiry Source*"
                            android:textColor="@color/text1"

                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:id="@+id/rvEnquirySourceSpn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/border_card"
                            android:orientation="vertical">

                            <TextView

                                android:id="@+id/tvEnquirySource"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:gravity="left|center_vertical"
                                android:hint="-- Select Enquiry Source --"
                                android:paddingLeft="@dimen/_15sdp"
                                android:singleLine="true"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/text1"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvImportance1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Importance*"
                            android:textColor="@color/text1"

                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:id="@+id/rvImportance"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/border_card"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvImportance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:gravity="left|center_vertical"
                                android:hint="-- Select Importance --"
                                android:paddingLeft="@dimen/_15sdp"
                                android:singleLine="true"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/text1"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvCategory1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:text="Enquiry Category*"
                            android:textColor="@color/text1"

                            android:textSize="@dimen/_12sdp" />

                        <RelativeLayout
                            android:id="@+id/rvEnquiryCatSpn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:background="@drawable/border_card"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEnquiryCatagory"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="@dimen/_25sdp"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:gravity="left|center_vertical"
                                android:hint="-- Select Enquiry Category --"
                                android:paddingLeft="@dimen/_15sdp"
                                android:singleLine="true"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/text1"
                                android:textSize="@dimen/_10sdp" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:text=" Other Details"
                            android:textColor="@color/text1"
                            android:textSize="@dimen/_12sdp" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etOtherNote"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:background="@drawable/box"
                                    android:gravity="top|left"
                                    android:hint="Other Note"
                                    android:padding="@dimen/_8sdp"
                                    android:text=""
                                    android:textColor="@color/text1"
                                    android:textSize="@dimen/_12sdp" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/btn_save"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>