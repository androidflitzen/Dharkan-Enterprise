<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/offwhite"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDailogTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/login_start"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardSerch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="0dp"
            app:cardElevation="2dp">

            <EditText
                android:id="@+id/edt_spn_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Search Customer Category"
                android:inputType="textCapCharacters"
                android:padding="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp" />

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_spn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardSerch"
            android:paddingBottom="@dimen/_30sdp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="@color/white"
            android:text="Cancel"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible" />


        <Button
            android:id="@+id/btnOhk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:text="Ok"
            android:textColor="@color/offwhite"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible" />

    </LinearLayout>

</RelativeLayout>